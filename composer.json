{
  "name": "andersundsehr/root-sitemap",
  "description": "/sitemap.xml will show all language sitemaps",
  "license": [
    "GPL-2.0-or-later"
  ],
  "type": "typo3-cms-extension",
  "require": {
    "php": "~8.2.0 || ~8.3.0 || ~8.4.0 || ~8.5.0",
    "typo3/cms-core": "^12.4 || ^13.4",
    "typo3/cms-seo": "^12.4 || ^13.4"
  },
  "require-dev": {
    "pluswerk/grumphp-config": "^7.2.0 || ^10.1.3",
    "saschaegerer/phpstan-typo3": "^1.8.2 || ^2.1.1",
    "ssch/typo3-rector": "^1.1.3 || ^2.15.2 || ^3.6.2"
  },
  "autoload": {
    "psr-4": {
      "AUS\\RootSitemap\\": "Classes/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "phpro/grumphp": true,
      "phpstan/extension-installer": true,
      "pluswerk/grumphp-config": true,
      "typo3/class-alias-loader": true,
      "typo3/cms-composer-installers": true
    }
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "root_sitemap"
    }
  }
}
